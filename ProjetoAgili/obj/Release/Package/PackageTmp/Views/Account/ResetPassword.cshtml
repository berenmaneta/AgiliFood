@model ProjetoAgili.Models.ResetPasswordViewModel

@{
    Layout = "../Layout/Index.cshtml";
}

<div class="content-wrapper" style="overflow:hidden;">
    <section class="content-header">


        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Minha Conta</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(x => x.Email)
                <div class="box-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Senha antiga</label>
                        <div class="col-sm-10">
                            @Html.PasswordFor(m => m.Code, new { @class = "form-control form-password" })
                            <br />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Senha nova</label>
                        <div class="col-sm-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control form-password" })
                            <br />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Confirme a senha</label>
                        <div class="col-sm-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-password" })
                            <br />
                        </div>
                    </div>


                </div>

                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-info pull-right">Salvar</button>
                </div>

            }

        </div>




        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Informações de Perfil</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("DataProfile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })


                <div class="box-body">

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Nome</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(a => a.Name, new { @class = "form-control", placeholder = "Nome" })
                            <br />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Sobrenome</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(a => a.LastName, new { @class = "form-control", placeholder = "Nome" })
                            <br />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Frase de apresentação</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(a => a.PresentSentence, new { @class = "form-control", placeholder = "Nome" })
                            <br />
                        </div>
                    </div>

                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-info pull-right">Enviar</button>
                </div>
            }
        </div>

        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Foto de Perfil</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="box-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Foto</label>
                        <div class="col-sm-10">
                            <input type="file" name="ImageData" id="ImageData" onchange="fileCheck(this);" />
                            <br />
                        </div>
                    </div>
                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-info pull-right">Upload</button>
                </div>
            }
        </div>



    </section>
</div>


<script>
    $(document).ready(function () {

        document.getElementById('Password').value = "123";
        document.getElementById('ConfirmPassword').value = "123";

    });
</script>
