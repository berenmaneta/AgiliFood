@model ProjetoAgili.Models.ChangePasswordModel

<!DOCTYPE html>
<html>
<head>

    <meta http-equiv="content-type" content="text/html; charset=utf-8" />

    @Html.Partial("../Users/Partials/_HeaderJSPartial")


</head>

<body>

    @Html.Partial("../Users/Partials/_HeaderPartial")

    <section id="content">
        <div class="content-wrap">
            <div class="container clearfix">
                <div class="row">

                    <div class="col-sm-9" style="margin-left:11%;">
                        <div class="well bg-white b-0">
                            @using (Html.BeginForm("ResetPassword", "Users", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="box-body">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Senha antiga</label>
                                        <div class="col-sm-10">
                                            @Html.PasswordFor(m => m.Code, new { @class = "form-group form-password" })
                                            @*@Html.ValidationMessageFor(a => a.Code, "", new { @class = "error" })*@
                                            <br />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Senha nova</label>
                                        <div class="col-sm-10">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-group form-password" })
                                            @*@Html.ValidationMessageFor(a => a.Password, "", new { @class = "error" })*@
                                            <br />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Confirme a senha</label>
                                        <div class="col-sm-10">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-group form-password" })
                                            @*@Html.ValidationMessageFor(a => a.ConfirmPassword, "", new { @class = "error" })*@
                                            <br />
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        @*<label class="col-sm-2 control-label">Confirme a senha</label>*@
                                        <div class="col-sm-2 control-label">
                                            <button type="submit" class="btn btn-info pull-left">Salvar</button>
                                        </div>
                                    </div>





                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>

            @Html.Partial("../Users/Partials/_FooterPartial")

        </div>
    </section>


    <div id="gotoTop" class="fa fa-angle-up hidden-md"></div>

    @Html.Partial("../Users/Partials/_FooterJSPartial")

</body>
</html>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


















