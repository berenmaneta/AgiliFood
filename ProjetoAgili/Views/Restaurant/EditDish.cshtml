@model ProjetoAgili.Models.DishesModel

@{
    Layout = "../Layout/RestaurantIndex.cshtml";
}


<div class="content-wrapper" style="overflow:hidden;">
    <section class="content-header">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Editar Prato</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("EditDish", "Restaurant", FormMethod.Post, new { @enctype = "multipart/form-data", id = "dishPictureForm" }))
            {

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(x => x.IdRestaurant)
                @Html.HiddenFor(x => x.IdDish)
                <div class="box-body">


                    <div class="form-group">
                        <label class="col-sm-2 control-label">Foto</label>
                        <div class="col-sm-10">
                            <input style="cursor:pointer;" type="file" id="file" name="file" />
                        </div>
                        <br /><br />
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Nome</label>
                        <div class="col-sm-10">
                            @*<input type="email" class="form-control" id="inputEmail3" placeholder="Email">*@
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Nome" })
                            <br />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Descrição</label>
                        <div class="col-sm-10">
                            @*<input type="email" class="form-control" id="inputEmail3" placeholder="Email">*@
                            @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "Descrição" })
                            <br />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Preço</label>
                        <div class="col-sm-10">
                            @*<input type="email" class="form-control" id="inputEmail3" placeholder="Email">*@
                            @Html.TextBoxFor(model => model.Price, new { @class = "form-control", placeholder = "Preço", @style = "width: 20%;", @type = "double" })
                            <br />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Categoria</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.IdCategory, new SelectList(ViewBag.Categories, "ID", "Name"), new { @class = "form-control", @style = "width: 20%;" })
                            <br /><br />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Disponível no Menu</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.IsOnMenu, new SelectList(ViewBag.Options, "IsOnMenu", "Name"), new { @class = "form-control", @style = "width: 20%;" })
                            <br />
                        </div>
                    </div>

                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-info pull-right">Editar</button>
                </div>
                <!-- /.box-footer -->
            }
        </div>
    </section>
</div>

