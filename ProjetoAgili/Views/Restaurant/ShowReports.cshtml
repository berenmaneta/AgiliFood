@model ProjetoAgili.Models.ShowReportViewModel

@{
    Layout = "../Layout/RestaurantIndex.cshtml";
}

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
</head>

<div class="content-wrapper" style="overflow:hidden">
    <section class="content-header">
        <div class="box">
            <div class="box-header">
                <h1 class="box-title">Lista de Pedidos</h1>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Total</th>
                            <th></th>
                            @*<th>ID USER</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Reports)
                        {
                            <tr id="@item.IdUser">
                                <td>@item.Name</td>
                                <td>@item.Total</td>
                                <td><a href="@Url.Action("ShowReportByUser", "Restaurant", new { id = @item.IdUser })" class="btn-primary btn-sm">Visualizar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <h4>Total: R$ @Model.Total</h4>
            </div>
        </div>
    </section>
</div>
